// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Schema {
  // id Int @id @default(autoincrement())
  schemaId String @id @unique
  name String 
  version String
  attrNames String[]
  issuerId String
  credentialDefinitions CredentialDefination[]
}

model CredentialDefination {
  credentialDefinitionId String @id @unique
  type String
  tag String
  schemaId String 
  schema Schema @relation(fields: [schemaId], references: [schemaId])
  issuerId String


}
